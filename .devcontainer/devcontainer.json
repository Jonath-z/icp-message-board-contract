{
    "name": "ICP Message Board Contract",
    "build": {
        "dockerfile": "Dockerfile"
    },
    // "privileged": true,
    // "securityOpt": [
    //     "seccomp=unconfined",
    //     "label=disabled"
    // ],
    // "runArgs": [
    //     "--cgroupns=host"
    // ],
    "forwardPorts": [
        4943
    ],
    "portsAttributes": {
        "4943": {
            "label": "dfx",
            "onAutoForward": "ignore"
        }
    },
    "onCreateCommand": "nohup bash -c 'dfx start &'",
    "postAttachCommand": "([ -f nohup.out ] && (npm i && cat nohup.out && rm nohup.out)) || exit 0",
    "remoteUser": "root"
}